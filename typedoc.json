{
	"docsRoot": "./docs",
	"entryPoints": ["packages/*/"],
	"exclude": [
		"packages/ai-orchestrator/",
		"packages/demo/",
		"packages/template/",
		// exclude until ready
		"packages/data-storage/"
		// Not ready but already referenced in the docs pages
		// "packages/rx/",
		// "packages/react/"
	],
	"entryPointStrategy": "packages",
	"excludeExternals": true,
	"externalPattern": ["**/node_modules/**"],
	"excludePrivate": true,
	"githubPages": true,
	"hideBreadcrumbs": true,
	"hidePageHeader": true,
	"markdownItOptions": {
		"html": true
	},
	// "inlineTags": ["@playground"],

	"out": "docs/packages/",
	"plugin": ["typedoc-plugin-markdown", "typedoc-vitepress-theme"],
	// "readme": "packages/README.md",
	/* t4ee */
	"pretty": true
}
