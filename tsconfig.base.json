{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"paths": {
			"@utiils/core": ["./packages/core/src/*"],
			"@utiils/promise": ["./packages/promise/src/*"],
			"@utiils/react": ["./packages/react/src/*"],
			"@utiils/rx": ["./packages/rx/src/*"],
			"@utiils/ai-orchestrator": ["./packages/ai-orchestrator/src/*"],
			"@utiils/demo": ["./packages/demo/src/*"]
		},
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"strict": true,
		"skipLibCheck": true,
		"target": "ES2018"
	},
	"exclude": [
		"node_modules",
		"dist",
		// Exclude all possible tests files and directories
		"packages/*/tests**",
		"**/__tests__",
		"**/__tests__/**",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx"
	]
}
