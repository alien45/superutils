{
	"compilerOptions": {
		// "composite": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		// "incremental": true,
		// "lib": ["ESNext", "DOM", "DOM.Iterable"],
		// "module": "node",
		// "moduleResolution": "node",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"strict": true,
		"skipLibCheck": true,
		"target": "es2018" // use ES2018 for broad compatibility
	},
	"exclude": [
		"node_modules",
		"dist",
		// Exclude all possible tests files and directories
		"packages/*/tests/**",
		"**/__tests__",
		"**/__tests__/**",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx"
	]
}
